{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Web] Run debug",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "preLaunchTask": "[Web] Start debug",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/src/Tex0tron.Web"
        },
        {
            "name": "Run MyConsole",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build",
            "program": "${workspaceFolder}/src/MyConsole/bin/Debug/net8.0/MyConsole.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
